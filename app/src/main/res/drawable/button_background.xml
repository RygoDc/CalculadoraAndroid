<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/azulon" /> <!-- Color de fondo al presionar -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <stroke android:width="4dp" android:color="#A0A0A0" /> <!-- Borde oscuro -->
        </shape>
    </item>
    <!-- Estado normal del botón -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/amarillo" /> <!-- Color de fondo normal -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <stroke android:width="4dp" android:color="#000000" /> <!-- Borde claro -->
        </shape>
    </item>
</selector>
